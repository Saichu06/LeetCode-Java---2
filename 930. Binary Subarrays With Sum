class Solution {
    public int numSubarraysWithSum(int[] nums, int goal) {
        return atMost(nums, goal) - atMost(nums, goal - 1);
    }

    private int atMost(int[] nums, int goal) {
        int r = 0, l = 0, c = 0, sum = 0;
        if (goal < 0) return 0;
        while (r < nums.length) {
            sum = sum + nums[r];
            while (sum > goal) {   // <-- fix: use while, not if
                sum = sum - nums[l];
                l++;
            }
            c = c + (r - l + 1);
            r = r + 1;
        }
        return c;
    }
}

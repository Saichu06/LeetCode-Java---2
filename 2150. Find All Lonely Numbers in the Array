class Solution {
    public List<Integer> findLonely(int[] nums) {
        List<Integer> list = new ArrayList<>();
        Arrays.sort(nums); // sort the array
        
        int n = nums.length;
        
        for (int i = 0; i < n; i++) {
            boolean leftOk = (i == 0) || (nums[i] - nums[i - 1] > 1);
            boolean rightOk = (i == n - 1) || (nums[i + 1] - nums[i] > 1);
            
            if (leftOk && rightOk) {
                list.add(nums[i]);
            }
        }

        return list;
    }
}

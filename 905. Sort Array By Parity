class Solution {
    public int[] sortArrayByParity(int[] nums) {
        int l = 0, r = nums.length - 1;

        while (l < r) {
            if (nums[l] % 2 > nums[r] % 2) {
                // left odd, right even â†’ swap
                int temp = nums[l];
                nums[l] = nums[r];
                nums[r] = temp;
            }

            if (nums[l] % 2 == 0) l++;  // left is good (even)
            if (nums[r] % 2 == 1) r--;  // right is good (odd)
        }
        return nums;
    }
}

public class DuplicateLetter {
    public static String dup(String str,int idx,StringBuilder sb,boolean map[]){
        if(idx==str.length()){
            return sb;
        }

        char currchar=str.charAt(idx);
        if(map[currchar-'a']==true){
            dup(str,idx+1,sb,map);
        }
        else{
            map[currchar-'a']=true;
            dup(str,idx+1,sb.append(currchar),map);
        }
    }
    public static void main(String[] args) {
        String str="Saichuaa";
        dup(str,0,new StringBuilder(""),new boolean[26]);
    }
}

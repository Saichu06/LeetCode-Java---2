class Solution {
    public double findMaxAverage(int[] nums, int k) {
        int l=0;
        int r=0;
        int maxsum=Integer.MIN_VALUE;
        int sum=0;
        while(r<nums.length){
            sum=sum+nums[r];
            while((r-l+1)>k){
                sum=sum-nums[l];
                l=l+1;
            }

            if (r - l + 1 == k) {
                maxsum = Math.max(maxsum, sum);
            }
            r++;
        }

        return maxsum*1.0/k;
    }
}

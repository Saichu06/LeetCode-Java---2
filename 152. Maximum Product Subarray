class Solution {
    public int maxProduct(int[] nums) {
        // //Brute
        // int maxprod=nums[0];
        // for(int i=0;i<nums.length;i++){
        //     int prod=1;
        //     for(int j=i;j<nums.length;j++){
        //         prod=prod*nums[j];
        //         maxprod=Math.max(maxprod,prod);
        //     }
        // }

        //Optimized
        int n=nums.length;
        int pref=1;
        int suff=1;
        int maxprod=nums[0];
        for(int i=0;i<nums.length;i++){
            if(pref==0) pref=1;
            if(suff==0) suff=1;

            pref=pref*nums[i];
            suff=suff*nums[n-i-1];

            maxprod=Math.max(maxprod,Math.max(suff,pref));
        }

        return maxprod;
    }
}
